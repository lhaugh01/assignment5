product {
    display: block;
    border: 1px solid #ccc;
    padding: 10px;
    margin: 10px;
    background-color: #fff;
    border-radius: 5px;
}

name {
    display: block;
    font-size: 20px;
    font-weight: bold;
    color: #333;
}

description {
    display: block;
    font-style: italic;
    color: #666;
}

price {
    display: block;
    font-weight: bold;
    color: #f00;
    margin-top: 5px;
}

category {
    display: inline-block;
    background-color: #00f;
    color: white;
    padding: 3px 8px;
    margin: 2px;
    border-radius: 3px;
    font-size: 14px;
}
